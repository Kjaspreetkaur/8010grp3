<Window x:Class="EmailAdrBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailAdrBook"
        mc:Ignorable="d"
        Title="Address Book" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label Content="Names" FontSize="18" Margin="5 10" VerticalContentAlignment="Center"/>
        <Separator Grid.Row="1"/>
        <ListBox Grid.Row="2" ItemsSource="{Binding PersonList}" SelectedItem="{Binding PersonSelected}" Margin="5 10"/>
    </Grid>
</Window>
